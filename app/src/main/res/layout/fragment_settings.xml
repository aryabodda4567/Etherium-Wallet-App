<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


















        <ImageButton
            android:id="@+id/logoutIB"
            android:layout_width="56dp"
            android:layout_height="39dp"
            android:background="@color/black"
            android:scaleType="fitXY"
            android:src="@drawable/logout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.871" />

        <TextView
            android:id="@+id/logoutTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Logout"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoutIB"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/editTextImportPrivateKey"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:ems="10"
            android:hint="Paste Your Private Key To Import Your Account "
            android:inputType="textPassword"
            android:textAllCaps="true"
            android:layout_margin="13sp"
            android:textColorHint="#68FFFFFF"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@drawable/edit_text_border"
            android:imeOptions="actionGo"
            app:layout_constraintBottom_toTopOf="@+id/logoutIB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.118" />

        <TextView
            android:id="@+id/textViewAck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:textColor="#F60C0C"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/logoutIB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextImportPrivateKey"
            app:layout_constraintVertical_bias="0.004" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>